{
  "name": "pose-core",
  "version": "0.6.2",
  "description": "Factory for Pose animation state machines",
  "main": "lib/index.js",
  "module": "dist/pose-core.es.js",
  "jsnext:main": "dist/pose-core.es.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest",
    "prettier": "prettier --write ./src/*",
    "prepublishOnly": "npm test && npm run prettier && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/popmotion/packages/pose-core"
  },
  "keywords": [
    "animation",
    "dom",
    "declarative",
    "popmotion"
  ],
  "author": "Matt Perry",
  "license": "MIT",
  "presets": [
    "env"
  ],
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.5",
    "typescript": "^2.7.2",
    "prettier": "1.11.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.14.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "prettier": {
    "parser": "typescript",
    "singleQuote": true
  },
  "dependencies": {
    "@types/invariant": "^2.2.29",
    "@types/node": "^10.0.5",
    "hey-listen": "^1.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/_tests/.*\\.(ts|js)$",
    "rootDir": "src"
  }
}
