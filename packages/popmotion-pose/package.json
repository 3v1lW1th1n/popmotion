{
  "name": "popmotion-pose",
  "version": "1.4.4",
  "description": "A declarative animation library for HTML and SVG",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "bundle": "NODE_ENV=production webpack",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "measure": "gzip -c dist/popmotion-pose.js | wc -c",
    "prettier": "prettier ./src/*",
    "prepublishOnly": "npm run prettier && npm run build && npm run bundle"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/popmotion/packages/popmotion-pose"
  },
  "keywords": [
    "animation",
    "dom",
    "declarative",
    "popmotion"
  ],
  "author": "Matt Perry",
  "license": "MIT",
  "presets": [
    "env"
  ],
  "devDependencies": {
    "prettier": "1.11.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-typescript2": "^0.14.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "popmotion": "^8.1.22",
    "pose-core": "^0.5.2"
  },
  "unpkg": "./dist/popmotion-pose.js",
  "prettier": {
    "parser": "typescript",
    "singleQuote": true
  }
}
